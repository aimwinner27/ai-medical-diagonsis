import { useState } from "react";

export default function App() {
  const [symptoms, setSymptoms] = useState("");
  const [result, setResult] = useState("");

  async function handleDiagnose(e) {
    e.preventDefault();
    const res = await fetch("http://localhost:5000/api/diagnose", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ symptoms: symptoms.split(",") }),
    });
    const data = await res.json();
    setResult(data.prediction);
  }

  return (
    <div style={{ padding: 20 }}>
      <h1>AI Medical Diagnosis ðŸ©º</h1>
      <form onSubmit={handleDiagnose}>
        <input
          placeholder="Enter symptoms (comma separated)"
          value={symptoms}
          onChange={(e) => setSymptoms(e.target.value)}
          style={{ width: "60%", marginRight: 10 }}
        />
        <button type="submit">Diagnose</button>
      </form>
      {result && <h2>Prediction: {result}</h2>}
    </div>
  );
}
